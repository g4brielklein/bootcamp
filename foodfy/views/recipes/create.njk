{% extends 'layout.njk' %}

{% block span %}
    <a href="/admin/recipes/">Receitas</a>
{% endblock %}

{% block content %}

    <form method="POST" action="/admin/recipes">

        <div class="item">
            <div>URL da Imagem</div>
            <input 
                type="url" 
                name="image_url"
                placeholder="https://"
            >
        </div>

        <div class="item">
            <div>Nome da receita</div>
            <input 
                type="text" 
                name="recipe_name"
            >
        </div>

        <div class="item">
            <div>Nome do autor</div>
            <input 
                type="text" 
                name="author_name"
            >
        </div>

        <div class="item">
            <div>Ingredientes</div>
            <input 
                type="text" 
                name="ingredients"
                placeholder="Separe os ingredientes por vÃ­rgula"
            >
        </div>

    </form>
    
{% endblock %}