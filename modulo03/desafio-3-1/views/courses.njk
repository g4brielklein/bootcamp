{% extends "layout.html" %}}

{% block content %}}

    <div id="wrapper">
        <h1>Posts</h1>
    </div>

    <section class="cards">

        <div class="card" id="terminal-com-oh-my-zsh-spaceship-dracula-e-mais">
            <div class="card__image-container">
                <img src="https://blog.rocketseat.com.br/content/images/2019/05/Painel.png" alt="Terminal" />
            </div>
            <div class="card__content">
                <p>Terminal com Oh My Zsh, Spaceship, Dracula e mais</p>
            </div>
