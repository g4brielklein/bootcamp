{% extends "layout.njk" %}

{% block content %}

    <div id="wrapper" class="post">
        <h1>{{ item.title }}</h1>
    </div>

    <section class="cards">

        <div class="card post" id={{ item.id }}>
            <div class="card__post-container">
                <iframe src="https://blog.rocketseat.com.br/{{ item.id }}" frameborder="0"></iframe>
            </div>
            <div class="card__content">
                <p>{{ item.title }}</p>
            </div>
            <div class="card__info">
                <p>{{ item.duration }}</p>
                <p class="card__author">{{ item.author }}</p>
            </div>
        </div>

    </section>

    <script src="/script.js"></script>

{% endblock %}