{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <div class="avatar" style="background: url(https://source.unsplash.com/collection/4852103/800x800) no-repeat  center center / cover"></div>
        <form class="details" method="post" action="/teachers">
            
            <h3>Details</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input
                        type = "url"
                        name = "avatar_url"
                        placeholder = "https://"
                        value = "{{ teacher.avatar_url }}"
                    >
                </div>
            </div>

            <div class="item">
                <div>Name</div>
                <div>
                    <input
                        type = "text"
                        name = "name"
                        placeholder = "Full name"
                        value = "{{ teacher.name }}"
                    >
                </div>
            </div>

            <div class="item">
                <div>Birth Date</div>
                <div>
                    <input
                        type = "date"
                        name = "birth"
                        value = "{{ teacher.birth }}"
                    >
                </div>
            </div>

            <div class="item">
                <div>Education</div>
                <div>
                    <span>
                        <input
                            type = "radio"
                            name = "education"
                            value = "Bachelor"
                            {% if teacher.education == 'Bachelor' %}
                                checked
                            {% endif %}
                        >Bachelor
                    </span>

                    <span>
                        <input
                            type = "radio"
                            name = "education"
                            value = "Master"
                            {% if teacher.education == 'Master' %}
                                checked
                            {% endif %}
                        >Master
                    </span>
                </div>
            </div>

            <div class="item">
                <div>Modality</div>
                <div>
                    <span>
                        <input
                            type = "radio"
                            name = "modality"
                            value = "In Person"
                            {% if teacher.modality == 'In Person' %}
                                checked
                            {% endif %}
                        > In Person
                    </span>

                    <span>
                        <input
                            type = "radio"
                            name = "modality"
                            value = "Distance Learning"
                            {% if teacher.modality == 'Distance Learning' %}
                                checked
                            {% endif %}
                        > Distance Learning
                    </span>
                </div>
            </div>

            <div class="item">
                <div>Classes</div>
                <div>
                    <input
                        type = "text"
                        name = "classes"
                        placeholder = "Separate classes with comma"
                        value = "{{ teacher.classes }}"
                    >
                </div>
            </div>

            <div class="item">
                <button type="submit">Submit</button>
            </div>

        </form>
    </div>
{% endblock content %}