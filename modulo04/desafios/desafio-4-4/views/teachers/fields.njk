<div class="item">
    <div>Avatar URL</div>
    <div>
        <input
            type = "url"
            name = "avatar_url"
            placeholder = "https://"
            value = "{{ teacher.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Name</div>
    <div>
        <input
            type = "text"
            name = "name"
            placeholder = "Full name"
            value = "{{ teacher.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Birth Date</div>
    <div>
        <input
            type = "date"
            name = "birth"
            value = "{{ teacher.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Education</div>
    <div>
        <select name="education">

            <option 
                value="bachelor"
                {% if teacher.education == 'bachelor' %}
                    selected
                {% endif %}
                >Bachelor
            </option>

            <option
                value="master"
                {% if teacher.education == 'master' %}
                    selected
                {% endif %}
                >Master
             </option>

            <option
                value="phd"
                {% if teacher.education == 'phd' %}
                    selected
                {% endif %}
                >Phd
             </option>
             
        </select>
    </div>
</div>

<div class="item">
    <div>Modality</div>
    <div>
        <span>
            <input
                type = "radio"
                name = "modality"
                value = "In Person"
                {% if teacher.modality == 'In Person' %}
                    checked
                {% endif %}
            > In Person
        </span>

        <span>
            <input
                type = "radio"
                name = "modality"
                value = "Distance Learning"
                {% if teacher.modality == 'Distance Learning' %}
                    checked
                {% endif %}
            > Distance Learning
        </span>
    </div>
</div>

<div class="item">
    <div>Classes</div>
    <div>
        <input
            type = "text"
            name = "classes"
            placeholder = "Separate classes with comma"
            value = "{{ teacher.classes }}"
        >
    </div>
</div>

<div class="item">
    <button type="submit">Submit</button>
</div>