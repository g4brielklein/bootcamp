{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <div class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat  center center / cover"></div>
        <div class="details">
            
            <h3>Details</h3>

            <div class="item">
                <div>Teacher</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Age</div>
                <div>{{ teacher.birth }}</div>
            </div>

            <div class="item">
                <div>Education</div>
                <div>{{ teacher.education }}</div>
            </div>

            <div class="item">
                <div>Modality</div>
                <div>{{ teacher.modality }}</div>
            </div>

            <div class="item">
                <div>Classes</div>
                <div>
                    {# {% for class in teacher.classes %} #}
                        <span>{{ teacher.classes }}</span>
                    {# {% endfor %} #}
                </div>
            </div>

            <div class="item">
                <div>Since</div>
                <div>{{ teacher.created_at }}</div>
            </div>
            
            <div>
                <a class="button">Edit</a>
            </div>

        </div>
    </div>
{% endblock content %}