{% extends 'layout.njk' %}

{% block header %}
    <a href="/" class="active">Teachers</a>
{% endblock %}

{% block content %}

    <div class="card">

            <section class="image" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
            <section class="details">

                <h3>Detalhes</h3>

                <div class="item">
                    <div>Nome completo</div>
                    <div>{{ teacher.name }}</div>
                </div>

                <div class="item">
                    <div>Idade</div>
                    <div>{{ teacher.birth }}</div>
                </div>

                <div class="item">
                    <div>Grau de escolaridade</div>
                    <div>{{ teacher.education }}</div>
                </div>

                <div class="item">
                    <div>Tipo de aula</div>
                    <div>{{ teacher.type }}</div>
                </div>

                <div class="item">
                    <div>Área de atuação</div>
                    <div>
                        <span>{{ teacher.subjects }}</span>
                    </div>
                </div>

            </section>
   
    </div>

{% endblock %}