{% extends "layout.njk" %}

{% block content %}

    <div class="card">

        <div 
            class="avatar" 
            style="background: url({{ teacher.avatar_url }}) no-repeat  center center / cover">
        </div>

        <div class="details" >
            
            <form method="POST" action="/teachers?_method=PUT">
                <h3>Edit Teacher</h3>

                {% include 'teachers/fields.njk' %}

                <input type="hidden" name="id" value="{{ teacher.id }}"> 

                <div class="buttons">
                    <button type="submit">Submit</button>
                
            </form>
            
            <form method="POST" action="/teachers?_method=DELETE">

                    <button id="delete_button" type="submit">Delete</button>
                </div>

                <input type="hidden" name="id" value="{{ teacher.id }}">
            </form>

        </div>
        
    </div>

{% endblock content %}