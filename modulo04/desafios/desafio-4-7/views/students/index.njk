{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
        <table width="100%">
            <thead>
                <tr>
                    <th>Full name</th>
                    <th>Classes</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for student in data.students %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ student.avatar_url }})"></span>
                            {{ student.name }}    
                        </td>
                        <td>
                        {% for class in student.classes %}
                            <span>{{ class }}</span>
                        {% endfor %}
                        </td>
                        <td><a href="/students/{{ student.id }}">Show</a></td>
                    </tr>   
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}