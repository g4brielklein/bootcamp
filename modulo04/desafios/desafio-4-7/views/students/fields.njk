<div class="item">
    <div>Avatar URL</div>
    <div>
        <input
            type = "url"
            name = "avatar_url"
            placeholder = "https://"
            value = "{{ student.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Name</div>
    <div>
        <input
            type = "text"
            name = "name"
            placeholder = "Full name"
            value = "{{ student.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Birth</div>
    <div>
        <input
            type = "date"
            name = "birth"
            value = "{{ student.birth }}"
        >
    </div>
</div>
