{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <div class="avatar" style="background: url({{ student.avatar_url }}) no-repeat  center center / cover"></div>
        <div class="details">
            
            <h3>Details</h3>

            <div class="item">
                <div>Student</div>
                <div>{{ student.name }}</div>
            </div>

            <div class="item">
                <div>Age</div>
                <div>{{ student.age }}</div>
            </div>

            <div class="item">
                <div>Education</div>
                <div>{{ student.education }}</div>
            </div>

            <div class="item">
                <div>Modality</div>
                <div>{{ student.modality }}</div>
            </div>

            <div class="item">
                <div>Classes</div>
                <div>
                    {% for class in student.classes %}
                        <span>{{ class }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Since</div>
                <div>{{ student.created_at }}</div>
            </div>
            
            <div>
                <a href="/students/{{ student.id }}/edit" class="button">Edit</a>
            </div>

        </div>
    </div>
    
{% endblock content %}