{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <div class="avatar" style="background: url({{ student.avatar_url }}) no-repeat  center center / cover"></div>
        <div class="details">
            
            <h3>Details</h3>

            <div class="item">
                <div>Student</div>
                <div>{{ student.name }}</div>
            </div>

            <div class="item">
                <div>Birth</div>
                <div>{{ student.birth }}</div>
            </div>
            
            <div>
                <a href="/students/{{ student.id }}/edit" class="button">Edit</a>
            </div>

        </div>
    </div>
    
{% endblock content %}