{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">

        <a href="/teachers/create">Novo</a>
    
        <table width="100%">
            <thead>
                <tr>
                    <th>Full name</th>
                    <th>Classes</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in data.teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ teacher.avatar_url }})"></span>
                            {{ teacher.name }}    
                        </td>
                        <td>
                        {% for class in teacher.classes %}
                            <span>{{ class }}</span>
                        {% endfor %}
                        </td>
                        <td><a href="/teachers/{{ teacher.id }}">Show</a></td>
                    </tr>   
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}