{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{ instructor.avatar_url }}) no-repeat center center / cover"></section></section>
        <section class="details">
            
            <h3>Details</h3>

            <div class="item">
                <div>Instructor</div>
                <div>{{ instructor.name }}</div>
            </div>

            <div class="item">
                <div>Age</div>
                <div>{{ instructor.age }}</div>
            </div>

            <div class="item">
                <div>Gender</div>
                <div>{{ instructor.gender }}</div>
            </div>

            <div class="item">
                <div>Activities</div>
                <div>
                    {# {% for (service in instructor.services) %} #}
                        <span>{{instructor.services}}</span>
                    {# {% endfor %} #}
                </div>
            </div>

            <div class="item">
                <div>Since</div>
                <div>{{ instructor.created_at }}</div>
            </div>
        
        </section>
    </div>

{% endblock content %}