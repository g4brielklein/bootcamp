<div class="item">
    <div>Avatar URL</div>
    <div>
        <input
            type="url"
            name="avatar_url"
            placeholder="https://"
            value="{{ instructor.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Instructor</div>
    <div>
        <input
            type="text"
            name="name"
            placeholder="Type instructor's name"
            value="{{ instructor.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Birth Date</div>
    <div>
        <input
            type="date"
            name="birth"
            value="{{ instructor.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Gender</div>
    <div>
        <span><input
            type="radio"
            name="gender"
            value="M"
            checked
        >Masculino</span>

        <span><input
            type="radio"
            name="gender"
            value="F"
        >Feminino</span>
    </div>
</div>

<div class="item">
    <div>Services</div>
    <div>
        <input
            type="text"
            name="services"
            placeholder="Separate services with commas"
            value="{{ instructor.services }}"
        > 
    </div>
</div>

<button type="submit">Submit</button>