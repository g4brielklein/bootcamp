{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{ member.avatar_url }}) no-repeat center center / cover"></section></section>
        <section class="details">
            
            <h3>Details</h3>

            <div class="item">
                <div>Member</div>
                <div>{{ member.name }}</div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>{{ member.email }}</div>
            </div>

            <div class="item">
                <div>Birth</div>
                <div>{{ member.birth }}</div>
            </div>

            <div class="item">
                <div>Gender</div>                
                {% if member.gender == 'M' %}
                    <div>Masculino</div>
                {% endif %}
                
                {% if member.gender == 'F' %}
                    <div>Feminino</div>
                {% endif %}
            </div>

            <div class="item">
                <div>Blood type</div>
                <div>{{ member.blood_type }}</div>
            </div>

            <div class="item">
                <div>Weight</div>
                <div>{{ member.weight }}</div>
            </div>

            <div class="item">
                <div>Height</div>
                <div>{{ member.height }}</div>
            </div>

            <a href="/members/{{ member.id }}/edit" class="button">Editar</a>
        
        </section>
    </div>

{% endblock content %}